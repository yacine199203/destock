{% extends "base.html.twig" %}
{% block body %}
<div class="col-md-12 text-center mb-5 py-3" style="background-color: #efeeea;">
    {% block arbo %}
    {% endblock %}
</div>
<div class="container">
    <div class="row">
        <div class="col-md-3 pr-4 border bg-light">
            <div class="p-2 border-bottom">
                <h5>Yacine Bouadjenek</h5>
            </div>
            <div class="p-3">
                <a href="{{path('dashbord')}}" class="nav-link"><i class="fas fa-cog"></i> Dashbord</a>
                <a href="#" class="nav-link"><i class="fas fa-user"></i> Utilisateurs</a>
                <a href="{{path('category')}}" class="nav-link"><i class="fas fa-list"></i> Cat√©gories</a>
                <a href="#" class="nav-link"><i class="fas fa-shopping-cart"></i></i> Produits</a>
                <a href="{{path('slider')}}" class="nav-link"><i class="far fa-images"></i> Slider</a>

            </div>
        </div>
        <div class="col-md-9">
            {% for label,messages in app.flashes %}
            {% for message in messages %}
            <div class="alert alert-{{label}} alert-dismissible fade show" role="alert">
                {{message|raw}}
                <button type="button " class="close " data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            {% endfor %}
            {% endfor %}
            {% block mbody %}{% endblock %}
        </div>
    </div>
</div>
{% endblock %}
{% block javascripts %}{% endblock %}
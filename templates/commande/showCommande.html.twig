{% extends 'base.html.twig' %}

{% block title %}Ma commande{% endblock %}
{% block body %}
{% if (app.user == showCommande.user) or is_granted('ROLE_EDITOR') %}
<div class="container">
    <div class="row my-5">
        <div class="col-12 text-center">
            <h1 style="font-weight: 500;">{{ 'commande n°: ' |upper }}{{showCommande.ref}}</h1>
        </div>
        <div class="col-12 text-center">
            <h3 style="font-weight: 500;">{{showCommande.user.lastName}} {{showCommande.user.firstName}}</h3>
        </div>
        <div class="col-12 text-center">
            <h5 style="font-weight: 500;">{{showCommande.createdAt|date("d/m/Y")}}</h5>
        </div>
    </div>

    <div class="row mx-2 p-2 category" style="min-width: 900px;">
        <div class="col-12">

            <div class="row justify-content-between px-2 py-1 border-bottom mx-3 ">
                <div class="col-6 pl-0">
                    <h6 style="font-weight: 800;">Produit</h6>
                </div>
                <div class="col-2 pl-0">
                    <h6 style="font-weight: 800;">Prix TTC</h6>
                </div>
                <div class="col-2 pl-0">
                    <h6 style="font-weight: 800;">Qté</h6>
                </div>
                <div class="col-2 pl-0">
                    <h6 style="font-weight: 800;">Montant TTC</h6>
                </div>
            </div>

            {% for item in showCommande.carts %}
            <div class="row justify-content-between px-2 py-2 border-bottom mx-3 ">

                <div class="col-6 pl-0 align-self-center">
                    <span>{{item.product.product.category.categoryName}} </span>
                    <span>{{item.product.product.productName}} </span>
                    <span>{{item.product.dimension}} </span>
                </div>
                <div class="col-2 pl-0 align-self-center">
                    <span>{{item.price|number_format( 2, ',', ' ')}} </span>
                </div>
                <div class="col-2 pl-0 align-self-center">
                    <span>{{item.qty}}</span>
                </div>
                <div class="col-2 pl-0 align-self-center">
                    <span>{{(item.price * item.qty)|number_format( 2, ',', ' ')}}</span>
                </div>

            </div>
            {% endfor %}
        </div>
    </div>
    <div class="row mx-2 py-3">
        <div class="col-9"></div>
        <div class="col-3 category" style="height: 100%;">
            <div class="row py-2 border-bottom mx-3 align-self-center">
                <div class="mx-auto">
                    <span style="font-weight: 800;" class="m-0 pr-2">Total :</span>
                    <span> {{total|number_format( 2, ',', ' ')}}</span>
                </div>
            </div>
        </div>
    </div>
</div>
{% endif %}
{% endblock %}